  </style> -->
  <body>
    <%-
    include('./navbar',{id:locals.id,c:locals.isAuthentication,admin:locals.admin})%>
    <br/>
    <div class="container ">
      <div class="mx-lg-5">
      <% if (pages > 0) { %>
      <nav aria-label="Page navigation example">
        <div class="pagination justify-content-end">
          <div class="pagination">
            <ul class="pagination">
              <% if (current == 1) { %>
              <li class="page-item"><a href="" class="page-link">First</a></li>
              <% } else { %>
              <li class="page-item">
                <a href="/articles/1" class="page-link">First</a>
              </li>
              <% } %> <% var i = (Number(current) > 5 ? Number(current) - 4 : 1)
              %> <% if (i !== 1) { %>
              <li class="page-item"><a class="page-link">...</a></li>
              <% } %> <% for (; i <= (Number(current) + 4) && i <= pages; i++) {
              %> <% if (i == current) { %>
              <li class="page-item">
                <a href="" class="page-link"><%= i %></a>
              </li>
              <% } else { %>
              <li class="page-item">
                <a href="/articles/<%= i %>" class="page-link"><%= i %></a>
              </li>
              <% } %> <% if (i == Number(current) + 4 && i < pages) { %>
              <li class="page-item"><a class="page-link">...</a></li>
              <% } %> <% } %> <% if (current == pages) { %>
              <li class="page-item"><a class="page-link">Last</a></li>
              <% } else { %>
              <li class="page-item">
                <a href="/articles/<%= pages %>" class="page-link">Last</a>
              </li>
              <% } %>
            </ul>
          </div>
        </div>
      </nav>
      <% } %> <% articles.forEach (article=>{%>
      <article>
        <div class="card rounded-0 mb-3 ">
          <img
            src="/uploads/<%-article['img']%>"
            class="rounded-0 card-img-top"
            alt="..."
          />
          <div class="card-body">
            <a
              href="../../detail_article/<%-article['id']%>"
              rel="noopener noreferrer"
              ><h5 class="card-title"><%-article['title']%></h5></a
            >
            <p class="card-text">
              Maqolani Batafsil Uqing
            </p>
          </div>
          <div class="card-footer">
            <p dir="rtl">
              <mark
                >Author:<a href="/profile/<%-article['author']['id']%>">
                  <b><%-article["author"]['username']%></b></a
                ></mark
              >
            </p>
          </div>
        </div>

        <br />
      </article>
      <%})%>
    </div>
  </div>
    <%-include ('footer')%>
  </body>
</html>
